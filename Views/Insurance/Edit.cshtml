@model InsuranceViewModel

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Upravit Pojištění</h2>

        <form method="post" asp-controller="Insurance" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Osoba / Věc</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="InsuredObject">
                    <span asp-validation-for="InsuredObject" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Popis pojištění</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Roční platba</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" step="0.01" asp-for="AnnualPayment">
                    <span asp-validation-for="AnnualPayment" class="text-danger"></span>
                </div>
            </div>


            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Upravit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Insurance" asp-action="Detail" asp-route-email="@Model.Id" role="button">Zpět</a>
                </div>
            </div>
        </form>

    </div>
</div>