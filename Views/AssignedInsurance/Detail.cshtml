@model AgreedInsurance


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Detail uzavření smlouvy pro: @Model.InsuredPerson!.FirstName @Model.InsuredPerson.LastName</h2>

        <form method="get">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Datum sjednání</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.EstablishmentDate.ToShortDateString()">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Datum ukončení</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.ValidTo.ToShortDateString()">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Aktivní</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@(Model.Active ? "Aktivní" : "neaktivní")">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Popis pojištění</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model!.Insurance!.Description">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Jméno</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.InsuredPerson.FirstName">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Příjmení</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.InsuredPerson.LastName">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Trvalá adresa</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.InsuredPerson.Address">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Pojištěný objekt</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@Model.Insurance.InsuredObject">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Roční platba</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@string.Format("{0:N2} Kč", Model.Insurance.AnnualPayment)">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-danger" asp-controller="AssignedInsurance" asp-action="Delete" asp-route-id="@Model.Id"
                       role="button" onclick="return confirm('Opravdu chcete smazat ?')">Odstranit</a>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-primary" asp-controller="AssignedInsurance" asp-action="Index" role="button">Zpět na seznam</a>
                </div>
            </div>
        </form>
    </div>
</div>