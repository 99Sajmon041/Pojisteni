@model AssignedInsuranceCreateViewModel

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Přiřadit nové pojištění</h2>

        <form method="post" asp-controller="AssignedInsurance" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.InsuredPersonId" />
            <input type="hidden" name="fullName" value="@ViewData["FullName"]"/>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Celé jméno pojištěnce</label>
                <div class="col-sm-8">
                    <input class="form-control" readonly value="@ViewData["FullName"]">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" for="SelectedInsuranceId">Vyberte pojištění</label>
                <div class="col-sm-8">
                    <select asp-for="InsuranceId" asp-items="Model.Insurances" class="form-control"></select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Datum platnosti smlouvy</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EstablishmentDate">
                    <span asp-validation-for="EstablishmentDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Datum ukončení smlouvy</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ValidTo">
                    <span asp-validation-for="ValidTo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Přidat</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="InsuredPerson" asp-action="Detail" asp-route-email="@ViewData["Email"]" role="button">Zpět</a>
                </div>
            </div>
        </form>

    </div>
</div>