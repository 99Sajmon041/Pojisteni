@model InsuranceEventCreateViewModel

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">
            Úprava události pro: @Model.InsuredPerson!.FullName
        </h2>

        <form asp-controller="InsuranceEvent" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AgreedInsuranceId" />
            <input type="hidden" asp-for="InsuredPersonId" />
            <input type="hidden" asp-for="InsuredPerson"/>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Popis pojistné události</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="EventDescription"></textarea>
                    <span asp-validation-for="EventDescription" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Vyčíslení události</label>
                <div class="col-sm-8">
                    <input type="number" class="form-control" asp-for="AmountOfDamage" />
                    <span asp-validation-for="AmountOfDamage" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Datum události</label>
                <div class="col-sm-8">
                    <input class="form-control" type="month" asp-for="OccurredOn" />
                    <span asp-validation-for="OccurredOn" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Uložit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="InsuranceEvent" asp-action="index" role="button">Zrušit</a>
                </div>
            </div>
        </form>
    </div>
</div>